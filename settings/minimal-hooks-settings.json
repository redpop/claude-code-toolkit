{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/claude-code-toolkit/hooks/stop-notification.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "security|audit|vulnerability",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/claude-code-toolkit/hooks/error-detection.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/claude-code-toolkit/hooks/markdown-format.sh"
          }
        ]
      }
    ]
  }
}