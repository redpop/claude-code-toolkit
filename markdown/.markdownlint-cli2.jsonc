{
  "config": {
    "default": true,
    // Line length - for technical docs with code examples
    "MD013": {
      "line_length": 120,
      "code_blocks": false,
      "tables": false,
      "headings": false
    },
    // Heading blank lines for better readability
    "MD022": { 
      "lines_above": 1,
      "lines_below": 1
    },
    // Consistent list indentation (2 spaces)
    "MD007": { "indent": 2 },
    // Allow inline HTML for advanced formatting
    "MD033": false,
    // First line doesn't need to be a heading (for CLAUDE.md etc.)
    "MD041": false,
    // Code block style - use fenced blocks
    "MD046": { "style": "fenced" },
    // Emphasis style - use asterisks
    "MD049": { "style": "asterisk" },
    "MD050": { "style": "asterisk" },
    // Link fragments should be valid
    "MD051": false,
    // Reference links and images
    "MD052": false
  },
  "fix": true,
  "globs": ["**/*.md"],
  "ignores": ["**/node_modules/**", "**/vendor/**", "**/.git/**"]
}